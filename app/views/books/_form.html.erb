<%= simple_form_for @book, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <div class="field">
      <div class="control">
      <%= f.input :title, required: true, input_html: { class: "input", value: params[:title] }, wrapper: false, label_html: { class: "label" }  %>
      </div>
    </div>

    <!-- <div class="field">
      <div class="control">
        <%# <%= f.input :ISBN, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }  %> %>
      </div>
    </div> -->




    <div class="field">
      <div class="control">
        <%= f.input :description, required: true, input_html: { class: "textarea", value: params[:description] }, wrapper: false, label_html: { class: "label" } %>
      </div>
    </div>

    <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">Genre:</label>
          <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :genre, collection: Book::GENRES, prompt: "Select a genre" %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-briefcase"></i>
            </span>
          </div>
        </div>
      </div>


  <div class="columns">



    <div class="field column">
      <div class="control">
        <%= f.input :year, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }  %>
      </div>
    </div>

  </div>

  <div class="columns">
    <div class="field column">
      <div class="control">
        <label class="label">Picture</label>
        <div class="file">
          <label class="file-label">
            <%= f.input :avatar, as: :file, required: false, input_html: { class:"file-input book-avatar" }, label: false, wrapper: false %>
              <span class="file-cta">
                <span class="file-icon"><i class="fa fa-upload"></i></span>
                <span class="file-label">Choose a fileâ€¦</span>
              </span>
          </label>
        </div>
      </div>
    </div>
    <div class="column">
      <output id="list"></output>
    </div>
  </div>

  <hr />


  <%= f.button :submit, class: "button is-primary is-rounded mv4" %>
<% end %>
